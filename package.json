{
  "name": "angular-github-pages-actions",
  "version": "0.0.0",
  "private": true,
  "description": "description: 'Actions to super-charge your angular app for GitHub pages. Can run linting, creates the build and then deploys your dist (or specified) folder to Github",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahsanayaz/angular-github-pages-actions.git"
  },
  "keywords": [
    "actions",
    "angular",
    "github",
    "gh-pages",
    "deployment"
  ],
  "author": "Muhammad Ahsan Ayaz (https://github.com/ahsanayaz)",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "dependencies": {
    "@actions/core": "^1.2.0",
    "github-pages-deploy-action": "^3.4.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.4"
  }
}
